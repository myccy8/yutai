        <script>  
            var setting = { PageSize: 10, Total: 0, PageItemCount: 5 };
            function loadpage(pageurl) {
                $.cookie('pageindex', 0);
                $.cookie('pageurl', pageurl);
                $('#main_content').load(pageurl);
            }

            function redirectcurrentpage() {
                var pageurl = $.cookie('pageurl');
                if (pageurl) {
                    $('#main_content').load(pageurl);
                }
            }
            $(function () {
                // var menuarray = ['icon-folder-close','icon-user','icon-cog','icon-leaf'];            
                $.ajaxSetup({
                    contentType: "application/json;charset=utf-8",
                    statusCode: {
                        401: function (jqXHR, textStatus, errorThrown) {
                            window.location.href = '/html/login.html';
                        }
                    }
                });
                $.extend({
                    PageSize: 10, Total: 0, PageItemCount: 5,
                    fspost: function (url, data, func) {
                        if ($.type(data) == "function") {
                            data = (func = data, {});
                        }
                        return $.post(url, JSON.stringify(data), func);
                    }
                });
                //* show all elements & remove preloader
                setTimeout('$("html").removeClass("js")', 1000);
                $('#side_accordion li>a').on("click", function () {
                    var pageurl = $(this).attr('url');
                    if (pageurl) {
                        loadpage(pageurl);
                    }
                });

                //绑定登录名显示
                var BindLoginName = function () {
                    $.post('/api/Login/GetLoginName').success(function (data) {
                        if (data == null || data == "") {
                            window.location.href = '/html/login.html';
                        }
                        else {
                            $("#txtloginame").text(data);
                            //loadpage("/html/firstcatalog.html");
                        }
                    })
                }();

                //绑定登出按钮
                var BindLogOut = function () {
                    $("#btnlogout").click(function () {
                        $.post('/api/Login/LogOut').success(function () {
                            window.location.href = '/html/login.html';
                        });
                    });
                }();
            });
